    {
        cLayout = "~/Views/Shared/_Admin.cshtml";
    }
    else /*if(controller == "Posts")*/
    {
        cLayout = "~/Views/Shared/_Posts.cshtml";
    }
    //else
    //{
    //    cLayout = "~/Views/Shared/_Layout.cshtml";
    //}

    Layout = cLayout;
}