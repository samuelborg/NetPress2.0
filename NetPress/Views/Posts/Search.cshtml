@model IEnumerable<NetPress.Models.Posts>

@{
    ViewBag.Title = "Search";
}

@*<h2>Search</h2>*@


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr style="margin-top: 20px;margin-bottom: 20px;border: 0;border-top: 2px solid #000;">
@foreach (var item in Model)
{
    ViewBag.Null = null;
    ViewBag.ID = item.UserID;
    ViewBag.Category = item.category;
    <h2>
        <a href="#">@Html.DisplayFor(modelItem => item.title)</a>
    </h2>
    <p class="lead">
        by @Html.ActionLink((string)ViewBag.ID, "Search", "Posts", new { searchID = ViewBag.ID }, null)
    </p>
    <p><span class="glyphicon glyphicon-time"></span> Last edited on @Html.DisplayFor(modelItem => item.lastModified)</p>
        <hr>
        <p>@Html.DisplayFor(modelItem => item.content)</p>
                <hr>
                <p>
                    @Html.DisplayNameFor(model => model.category) : @Html.ActionLink((string)ViewBag.Category, "Search", "Posts", new { searchString = ViewBag.Category }, null)
                </p>
                <hr style="margin-top: 20px;margin-bottom: 20px;border: 0;border-top: 2px solid #000;">
}