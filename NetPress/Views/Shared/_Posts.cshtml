<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - NetPress</title>


    @Styles.Render("~/Content/Home/css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav role="navigation">
       
        @Html.Partial("_Navbar")
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="page-header">
                    Posts Section
                    @*<small>Tiny ass text next to title</small>*@
                </h1>

                <!-- First Blog Post -->
                @RenderBody()

                <!-- Pager -->
                @*<ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>*@

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Search Category</h4>
                    @using (Html.BeginForm("Search", "Posts", FormMethod.Get))
                    {
                    <div class="input-group">
                        
                            @Html.TextBox("searchString")

                            <input type="submit" class="form-control" value="Search">
                        
                        @*<span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                   <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>*@
                    </div>
                    }
                    <!-- /.input-group -->
                </div>
            </div>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; @DateTime.Now.Year - NetPress</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->


    @Scripts.Render("~/bundles/Admin/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>
